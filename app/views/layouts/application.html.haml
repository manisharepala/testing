!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title AssessmentApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track'=> 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track'=> 'reload'
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{style:'background-color:#000;'}
      .container-fluid.collapse_early
        %div.container-fluid
          %div.navbar-header
            %a{ :class=>"navbar-brand", :href=>"#"}Assessments
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                Assessments
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href => assessment_all_quizzes_path}All Assessments
                %li
                  %a{:href => assessment_zip_upload_question_path}Upload Zip

              %li
                %a{:href => assessment_migrate_quiz_path}Migrate Quiz
    .container{style:'margin-top: 4%;margin-bottom: -3%;'}
      - flash.each do |name, msg|
        = content_tag :div, msg, class: "alert alert-info"
    = yield

:css
  .navbar-nav > li > a {
    font-size: 1.5em;
  }

  .navbar {
    border-radius: 0px !important;
    margin-bottom: 0px;
  }
  html {
    position:relative;
    min-height: 100%;
  }

  .alert{
    margin-bottom: 0% !important;
  }

:javascript
    $(document).ready(function(){
      $(".alert-info" ).fadeOut(4000);
    });
