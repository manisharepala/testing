.container{style:'margin-top:4%;'}
  %h3 All Assessments
  %table.table.table-bordered.table-hover
    %thead
      %tr
        %th S.no
        %th Guid
        %th Quiz name
        %th No of Questions
        %th Final
        %th Uploaded on
    %tbody
      - @quiz.each_with_index do |quiz,i| 
        %tr
          %td= i+1
          %td= quiz.guid
          %td= link_to quiz.name,assessment_quiz_questions_path(id:quiz.id), target:'_blank'
          %td= quiz.question_ids.count rescue 0
          %td
            - if quiz.final?
              %span.fa.fa-check{style:'color:green; font-size:1.5em;'}
              |
              %span True
            - else
              %span.fa.fa-times{style:'color:red; font-size:1.5em;'}
              |
              %span False
          %td= quiz.created_at.strftime("%B %d, %Y")